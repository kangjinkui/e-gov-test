<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="egovframework.lawmatcher.department.mapper.DepartmentMapper">

    <resultMap id="departmentMap" type="egovframework.lawmatcher.department.vo.DepartmentVO">
        <result property="id" column="id"/>
        <result property="code" column="code"/>
        <result property="name" column="name"/>
        <result property="parentCode" column="parent_code"/>
        <result property="phone" column="phone"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="selectDepartmentById" parameterType="int" resultMap="departmentMap">
        SELECT
            id,
            code,
            name,
            parent_code,
            phone,
            created_at,
            updated_at
        FROM departments
        WHERE id = #{id}
    </select>

    <select id="selectDepartmentList" resultMap="departmentMap">
        SELECT
            id,
            code,
            name,
            parent_code,
            phone,
            created_at,
            updated_at
        FROM departments
        ORDER BY id DESC
    </select>

    <insert id="insertDepartment" parameterType="egovframework.lawmatcher.department.vo.DepartmentVO">
        INSERT INTO departments (
            code,
            name,
            parent_code,
            phone,
            created_at,
            updated_at
        ) VALUES (
            #{code},
            #{name},
            #{parentCode},
            #{phone},
            #{createdAt},
            #{updatedAt}
        )
    </insert>

    <update id="updateDepartment" parameterType="egovframework.lawmatcher.department.vo.DepartmentVO">
        UPDATE departments
        SET
            code = #{code},
            name = #{name},
            parent_code = #{parentCode},
            phone = #{phone},
            created_at = #{createdAt},
            updated_at = #{updatedAt}
        WHERE id = #{id}
    </update>

    <delete id="deleteDepartment" parameterType="int">
        DELETE FROM departments
        WHERE id = #{id}
    </delete>

</mapper>
