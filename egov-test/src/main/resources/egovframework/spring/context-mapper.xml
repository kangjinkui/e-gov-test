<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- SqlSession setup for MyBatis Database Layer -->
	<bean id="sqlSession" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="configLocation" value="classpath:/egovframework/sqlmap/lawmatcher/sql-mapper-config.xml" />
		<property name="mapperLocations">
			<list>
				<value>classpath:/egovframework/sqlmap/law/*.xml</value>
				<value>classpath:/egovframework/sqlmap/auth/*.xml</value>
				<value>classpath:/egovframework/sqlmap/ordinance/*.xml</value>
				<value>classpath:/egovframework/sqlmap/review/*.xml</value>
				<value>classpath:/egovframework/sqlmap/department/*.xml</value>
			</list>
		</property>
	</bean>

	<!-- MapperConfigurer setup for MyBatis Database Layer with @Mapper("deptMapper") in DeptMapper Interface -->
 	<bean class="org.egovframe.rte.psl.dataaccess.mapper.MapperConfigurer">
		<property name="basePackage" value="egovframework.lawmatcher" />
	</bean>
    
</beans>
